<Window x:Class="library.Книги__що_закріплені_за_читачем"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" Background="#FFEAEBF1"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:library"
        mc:Ignorable="d"     WindowStartupLocation="CenterScreen"
        Title="Книги, що закріплені за читачем" Height="496.4" Width="728">
    <Grid>
        <Rectangle Fill="White" HorizontalAlignment="Left" Height="377" Margin="22,26,0,0" Stroke="White" VerticalAlignment="Top" Width="343">
            <Rectangle.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray"/>
            </Rectangle.Effect>
        </Rectangle>
        <Label Content="Які книги закріплені за читачем" HorizontalAlignment="Left" Height="48" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="22,26,0,0" VerticalAlignment="Top" Width="343" Foreground="White" Background="#FF3B3B3F" FontSize="18"/>
        <DataGrid HorizontalAlignment="Left" x:Name="ReaderBooks" Height="214" Margin="34,180,0,0" VerticalAlignment="Top" Width="321" Background="#FFF0F0F3" FontSize="16"/>
        <TextBlock Text="Номер читацького квитка" TextWrapping="Wrap" HorizontalAlignment="Left" Height="47" Margin="36,87,0,0" VerticalAlignment="Top" Width="166" FontSize="18"/>
        <TextBox HorizontalAlignment="Left" VerticalContentAlignment="Center" x:Name="Number" Height="39" Margin="201,93,0,0" TextWrapping="Wrap" HorizontalContentAlignment="Center" Text="" VerticalAlignment="Top" Width="142" Background="#FFE9EAF0" FontSize="18"/>
        <Button Content="Знайти" Background="#FFBA5353" Foreground="White" HorizontalAlignment="Left" Height="32" Margin="65,142,0,0" VerticalAlignment="Top" Width="258" Click="Find" FontSize="18"/>
        <Rectangle Fill="White" HorizontalAlignment="Left" Height="70" Margin="389,26,0,0" Stroke="White" VerticalAlignment="Top" Width="301">
           
        </Rectangle>
        <Button Content="Які книги закріплені за певним читачем"  IsEnabled="False" HorizontalAlignment="Left" Height="39" Margin="387,148,0,0" VerticalAlignment="Top" Width="303" FontSize="14" Background="#FFB65454" Foreground="#FF3B3B3F"/>
        <Button Content="Список тих, хто взяв книгу більше місяця тому" HorizontalAlignment="Left" Height="39" Margin="387,200,0,0" VerticalAlignment="Top" Width="303" FontSize="14" Background="#FFB65454" Foreground="White" Click="Button_Click_2"/>
        <Button Content="У кого книги, кількість яких менша двох" HorizontalAlignment="Left" Height="39" Margin="387,253,0,0" VerticalAlignment="Top" Width="303" FontSize="14" Background="#FFBA5353" Foreground="White" Click="Button_Click_3"/>
        <Button Content="Загальна інформація та статистика" HorizontalAlignment="Left" Height="39" Margin="387,355,0,0" VerticalAlignment="Top" Width="303" FontSize="14" Background="#FFBA5353" Foreground="White" Click="Button_Click_5"/>
        <Button Content="Коли книга була закріплена за читачем" HorizontalAlignment="Left" Height="39" Margin="387,304,0,0" VerticalAlignment="Top" Width="303" FontSize="14" Background="#FFBA5353" Foreground="White" Click="Button_Click_4"/>
        <Rectangle Fill="#FF3B3B3F" HorizontalAlignment="Left" Height="4" Margin="387,92,0,0" VerticalAlignment="Top" Width="303"/>
        <Rectangle HorizontalAlignment="Left" Height="60" Margin="389,31,0,0" VerticalAlignment="Top" Width="20" Fill="#FFDC8C8C"/>
        <Rectangle HorizontalAlignment="Left" Height="53" Margin="409,38,0,0" VerticalAlignment="Top" Width="14" Fill="#FFBA5353"/>
        <Rectangle Fill="#FF94949C" HorizontalAlignment="Left" Height="51" Margin="431,35,0,0" VerticalAlignment="Top" Width="16" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-18.752"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Label Content="Інші функції" HorizontalAlignment="Left" Height="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="468.8,44,0,0" VerticalAlignment="Top" Width="142" Foreground="#FF3B3B3F" Background="{x:Null}" FontSize="20" FontWeight="Bold"/>
        <Rectangle HorizontalAlignment="Left" Height="66" Margin="675.8,26,0,0" VerticalAlignment="Top" Width="14" Fill="#FF94949C"/>
        <Rectangle HorizontalAlignment="Left" Height="53" Margin="645.8,36,0,0" VerticalAlignment="Top" Width="20" Fill="#FFDC8C8C" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="20.818"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle HorizontalAlignment="Left" Height="53" Margin="620.8,38,0,0" VerticalAlignment="Top" Width="14" Fill="#FFBA5353"/>
        <Rectangle Fill="#FF3B3B3F" HorizontalAlignment="Left" Height="5" Margin="389,26,0,0" VerticalAlignment="Top" Width="303"/>
        <Button Content="Інформація про книги" HorizontalAlignment="Left" Height="39" Margin="387,97,0,0" VerticalAlignment="Top" Width="303" FontSize="14" Background="#FFB65454" Foreground="White" Click="Button_Click"/>
        <Button Content="Вихід у меню" Background="White" Foreground="#FFB85353" HorizontalAlignment="Left" Height="25" Margin="66,413,0,0" VerticalAlignment="Top" Width="229" BorderBrush="#FFB85858" Click="Button_Click_6"/>
        <Button Content="Закрити програму" Background="White" Foreground="#FFB85353" HorizontalAlignment="Left" Height="25" Margin="428,413,0,0" VerticalAlignment="Top" Width="229" BorderBrush="#FFB85858" Click="Button_Click_7"/>


    </Grid>
</Window>
