<Window x:Class="library.Загальна_інформація"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:library"
            WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Загальна інформація" Height="507.6" Width="728" Background="#FFEAEBF1">
    <Grid>
        <Rectangle Fill="White" HorizontalAlignment="Left" Height="70" Margin="389,26,0,0" Stroke="White" VerticalAlignment="Top" Width="301">
        </Rectangle>
        <Rectangle HorizontalAlignment="Left" Height="66" Margin="675.8,26,0,0" VerticalAlignment="Top" Width="14" Fill="#FF94949C"/>
        <Rectangle HorizontalAlignment="Left" Height="53" Margin="645.8,36,0,0" VerticalAlignment="Top" Width="20" Fill="#FFDC8C8C" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="20.818"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>


        <Button Content="Які книги закріплені за певним читачем" HorizontalAlignment="Left" Height="39" Margin="387,148,0,0" VerticalAlignment="Top" Width="303" FontSize="14" Background="#FFB65454" Foreground="White" Click="Button_Click_1"/>
        <Button Content="Список тих, хто взяв книгу більше місяця тому" HorizontalAlignment="Left" Height="39" Margin="387,200,0,0" VerticalAlignment="Top" Width="303" FontSize="14" Background="#FFB65454" Foreground="White" Click="Button_Click_2"/>
        <Button Content="У кого книги, кількість яких менша двох" HorizontalAlignment="Left" Height="39" Margin="387,253,0,0" VerticalAlignment="Top" Width="303" FontSize="14" Background="#FFBA5353" Foreground="White" Click="Button_Click_3"/>
        <Button Content="Загальна інформація та статистика" IsEnabled="False" HorizontalAlignment="Left" Height="39" Margin="387,355,0,0" VerticalAlignment="Top" Width="303" FontSize="14" Background="#FFBA5353" Foreground="#FF3B3B3F"/>
        <Button Content="Коли книга була закріплена за читачем" HorizontalAlignment="Left" Height="39" Margin="387,304,0,0" VerticalAlignment="Top" Width="303" FontSize="14" Background="#FFBA5353" Foreground="White" Click="Button_Click_4"/>
        <Rectangle Fill="#FF3B3B3F" HorizontalAlignment="Left" Height="4" Margin="387,92,0,0" VerticalAlignment="Top" Width="303"/>
        <Rectangle HorizontalAlignment="Left" Height="60" Margin="389,31,0,0" VerticalAlignment="Top" Width="20" Fill="#FFDC8C8C"/>
        <Rectangle HorizontalAlignment="Left" Height="53" Margin="409,38,0,0" VerticalAlignment="Top" Width="14" Fill="#FFBA5353"/>
        <Rectangle Fill="#FF94949C" HorizontalAlignment="Left" Height="51" Margin="431,35,0,0" VerticalAlignment="Top" Width="16" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-18.752"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Label Content="Інші функції" HorizontalAlignment="Left" Height="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="468.8,44,0,0" VerticalAlignment="Top" Width="142" Foreground="#FF3B3B3F" Background="{x:Null}" FontSize="20" FontWeight="Bold"/>
        <Rectangle HorizontalAlignment="Left" Height="53" Margin="620.8,38,0,0" VerticalAlignment="Top" Width="14" Fill="#FFBA5353"/>
        <Rectangle Fill="#FF3B3B3F" HorizontalAlignment="Left" Height="5" Margin="389,26,0,0" VerticalAlignment="Top" Width="303"/>
        <Button Content="Інформація про книги" HorizontalAlignment="Left" Height="39" Margin="387,97,0,0" VerticalAlignment="Top" Width="303" FontSize="14" Background="#FFB65454" Foreground="White" Click="Button_Click"/>
        <Rectangle Fill="White" HorizontalAlignment="Left" Height="391" Margin="17,26,0,0" Stroke="White" VerticalAlignment="Top" Width="341">
            <Rectangle.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray"/>
            </Rectangle.Effect>
        </Rectangle>
        <Label Content="Загальна інформація" HorizontalAlignment="Left" Height="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="17,26,0,0" VerticalAlignment="Top" Width="341" Foreground="White" Background="#FF3B3B3F" FontSize="18"/>
        <Label Content="Кількість читачів" HorizontalAlignment="Left" Height="53" Margin="22,82,0,0" VerticalAlignment="Top" Width="181" FontSize="18"/>
        <TextBox HorizontalAlignment="Left" VerticalContentAlignment="Center" x:Name="Count" IsEnabled="False"  Height="41" Margin="203,81,0,0" TextWrapping="Wrap" HorizontalContentAlignment="Center" VerticalAlignment="Top" Width="141" Background="#FFE6E7F2" FontSize="18"/>
        <Label Content="К-сть молодших 20 " HorizontalAlignment="Left" Height="53" Margin="22,127,0,0" VerticalAlignment="Top" Width="181" FontSize="18"/>
        <TextBox HorizontalAlignment="Left" VerticalContentAlignment="Center" x:Name="Over20" IsEnabled="False"  Height="40" Margin="203,132,0,0" TextWrapping="Wrap" HorizontalContentAlignment="Center" Text="" VerticalAlignment="Top" Width="141" Background="#FFE6E7F2" FontSize="18"/>
        <Label Content="Відсоткові відношення освіти" HorizontalAlignment="Left" Height="39" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="17,187,0,0" VerticalAlignment="Top" Width="341" Foreground="White" Background="#FF3B3B3F" FontSize="18"/>
        <Label Content="Початкова" HorizontalAlignment="Left" Height="34" Margin="22,244,0,0" VerticalAlignment="Top" Width="112" FontSize="18" RenderTransformOrigin="0.732,0.488"/>
        <Label Content="Середня" HorizontalAlignment="Left" Height="38" Margin="22,278,0,0" VerticalAlignment="Top" Width="112" FontSize="18"/>
        <Label Content="Вища" HorizontalAlignment="Left" Height="42" Margin="22,313,0,0" VerticalAlignment="Top" Width="87" FontSize="18"/>
        <TextBox HorizontalAlignment="Left" VerticalContentAlignment="Center" x:Name="count1"  IsEnabled="False"  Height="30" Margin="180,240,0,0" TextWrapping="Wrap" HorizontalContentAlignment="Center" Text="" VerticalAlignment="Top" Width="164" Background="#FFE6E7F2" FontSize="18"/>
        <TextBox HorizontalAlignment="Left" VerticalContentAlignment="Center" IsEnabled="False" x:Name="count2" Height="29" Margin="180,281,0,0" TextWrapping="Wrap" HorizontalContentAlignment="Center" Text="" VerticalAlignment="Top" Width="164" Background="#FFE6E7F2" FontSize="18"/>
        <Label Content="Науковий ступінь" HorizontalAlignment="Left" Height="39" Margin="22,373,0,0" VerticalAlignment="Top" Width="172" FontSize="18"/>
        <Rectangle Fill="#FF3B3B3F" HorizontalAlignment="Left" Height="10" Margin="17,417,0,0" VerticalAlignment="Top" Width="341"/>
        <TextBox HorizontalAlignment="Left" IsEnabled="False" VerticalContentAlignment="Center" Name="count4" Height="33" Margin="180,375,0,0" TextWrapping="Wrap" HorizontalContentAlignment="Center" Text="" VerticalAlignment="Top" Width="164" Background="#FFE6E7F2" FontSize="18"/>
        <Rectangle Fill="#FFA45757" HorizontalAlignment="Left" Height="4" Margin="17,360,0,0" VerticalAlignment="Top" Width="341"/>
        <TextBox HorizontalAlignment="Left" IsEnabled="False" VerticalContentAlignment="Center" x:Name="count3" Height="29" Margin="180,321,0,0" TextWrapping="Wrap" HorizontalContentAlignment="Center" Text="" VerticalAlignment="Top" Width="164" Background="#FFE6E7F2" FontSize="18"/>
        <Button Content="Вихід у меню" Background="White" Foreground="#FFB85353" HorizontalAlignment="Left" Height="25" Margin="71,439,0,0" VerticalAlignment="Top" Width="229" BorderBrush="#FFB85858" Click="Button_Click_5"/>
        <Button Content="Закрити програму" Background="White" Foreground="#FFB85353" HorizontalAlignment="Left" Height="25" Margin="432,439,0,0" VerticalAlignment="Top" Width="229" BorderBrush="#FFB85858" Click="Button_Click_6"/>

    </Grid>
</Window>
